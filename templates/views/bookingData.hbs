<script type="text/javascript">


let url = "/booking"
let postUrl = "/collected"
sendData()
let tbody = document.querySelector("tbody")
let models = document.getElementById("models")
showdata()

function showdata(){
  loade()
  fetch(url)
  .then(res => res.json())
  .then(data => { 
     let Data = "" ;
     let model = ""
        data.forEach(function(item , index){
             
             Data += `
                 <tr class="myrow">
                    <td>0${index + 1}</td>
                    <td>${item.date}</td>
                    <td>${item.name}</td>
                    <td>${item.email}</td>
                    <td><a href="href="tel:${item.phone}">${item.phone}</a></td>
                    <td>${item.test}</td>
                    <td><a href="#!" data-bs-toggle="modal" data-bs-target="#models${item._id}">View</a></td>
                    <td>${item.place}</td>
                    <td>${item.pincode}</td>
                    <td class="address" >${item.address}</td>
                    <td style="color:red;">${item.status}</td>
                    <td>
                       <span class="action_btn">
                            <a href="#!" id="b${index}" onclick="updateStatus(${index})">Collected</a>
                            <a href="#!" id="${item._id}" onclick="manuallyDelete(this.id)">Cancel</a>
                       </span>
                    </td>
                 </tr>
             `
             
             model += `
                 <!-- Modal -->
                 <div class="modal fade" id="models${item._id}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                     <div class="modal-dialog modal-fullscreen">
                          <div class="modal-content">
                               <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Prescription</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                               </div>
                               <div class="modal-body">
                                    <img src="http://localhost:3000/product/${item.image.filename}" style="width:100%; height 100%" >
                               </div>
                               <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                               </div>
                          </div>
                     </div>
                 </div>
             `
        })
        tbody.innerHTML = Data;
        models.innerHTML = model
        
        if(data.length == "0"){
          tbody.innerHTML = `<p style="padding-top:10px ; font-size:1.1rem; font-weidth:600;">Nothing To show</p>`
        }
  })
  .catch((e)=>{
  console.log(e)
  })
}

function manuallyDelete(id){
  let check = confirm("Do you want Delete Appointment")
  if(check == true){
     remove(id)
     Display('success', 'Appointment Deleted')
  }
}

// delete function
function remove(id){
     fetch(url + "/" + id, {
           method: 'DELETE'
     })
     .then(() => {})
     .catch(err => {
         console.error(err)
     });
     showdata()
}





function updateStatus(index){
  let obj = {}
  let check = confirm("Do you really collected")
  if(check == true){
  
 fetch(url)
 .then(res => res.json())
 .then(data => {
      let Data = data[index]
      
      obj = {
        "name":Data.name,
        "email":Data.email,
        "phone":Data.phone, 
        "test":Data.test,
        "place":Data.place,
        "pincode":Data.pincode,
        "address":Data.address,
        "date":Data.date,
        "userID":Data.userID,
        "image":Data.image,
        "status": "Blood Collected"
      }
      
 
 
 
  fetch(`${url}/${Data._id}` , {
      method: 'PATCH',
      headers:{
         'Content-Type': 'application/json'
      },
      body: JSON.stringify(
           obj
      ),
  })
  .then(res => res.json())
  .then(data => {
       sendData()
       showdata()
  })
  .catch(error => {
       console.log(error);
  });
  
  sendData()
  
  })
  .catch((e)=>{
  console.log(e)
  })
  sendData()
  }
}





sendData()

function sendData(){
  let obj = {}
 fetch(url)
 .then(res => res.json())
 .then(data => {
    data.forEach((item , index) => {
      if(item.status == "Blood Collected"){
         obj = {
           "name":item.name,
           "email":item.email,
           "phone":item.phone,
           "test":item.test,
           "place":item.place,
           "pincode":item.pincode,
           "address":item.address,
           "date":item.date,
           "userID":item.userID,
           "image":item.image,
           "status": item.status
         }
         
         fetch(postUrl , {
             method: 'POST',
             headers:{
                  'Content-Type': 'application/json'
             },
              body: JSON.stringify(obj),
         })
         .then(res => res.json())
         .then(data => {
              remove(item._id)
              showdata()
         })
         .catch(error => {
              console.log(error);
         });
      }
      showdata()
    })
 })
 .catch((e)=>{
 console.log(e)
 })
 
 showdata()
}

let search = document.getElementById("search")
    
    search.addEventListener("input" , function(){
    
         let searchVal = search.value.toLowerCase();
         //console.log(searchVal)
    
         let row = document.getElementsByClassName("myrow")
     
         Array.from(row).forEach(function(element){
              //let cardTxt = element.getElementsByTagName("h6")[0].innerText
              let td1 = element.children[0].innerText.toLowerCase();
              let td2 = element.children[1].innerText.toLowerCase();
              let td3 = element.children[2].innerText.toLowerCase();
              let td4 = element.children[3].innerText.toLowerCase();
              let td5 = element.children[4].innerText.toLowerCase();
              let td6 = element.children[5].innerText.toLowerCase();
              let td7 = element.children[6].innerText.toLowerCase();
              let td8 = element.children[7].innerText.toLowerCase();
              let td9 = element.children[8].innerText.toLowerCase();
              let td10 = element.children[9].innerText.toLowerCase();
              
              if(td1.includes(searchVal) || td2.includes(searchVal) || td3.includes(searchVal) || td4.includes(searchVal) || td5.includes(searchVal) || td6.includes(searchVal) || td7.includes(searchVal) || td8.includes(searchVal) || td9.includes(searchVal) || td10.includes(searchVal)){
                 element.classList.remove("hide");
                 element.classList.add("show");
              }
              else{
                 element.classList.add("hide");
                 element.classList.remove("show");
              }
    
         })
     })
</script>
