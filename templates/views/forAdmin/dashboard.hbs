<!DOCTYPE html>
<html>
<head>
<title> Dashboards</title>
<meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  
<!-- icon -->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
   integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
   crossorigin="anonymous" referrerpolicy="no-referrer" />
   <!-- BOXICONS -->
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
   
   <!-- bootstrap -->
   <!--<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
   integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
   -->
   <!-- navbar styling -->
   <link href="../assets/css/navbar.css" rel="stylesheet">
   <!-- styling -->
   <link href="../assets/css/style.css" rel="stylesheet">
   
<style type="text/css">


.container .content .cards {
    padding: 20px 15px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    margin:0 auto;
}

.container .content .cards .card {
    min-width: 300px;
    height: 150px;
    background: white;
    margin: 20px 10px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    display:flex;
    align-items:center;
    justify-content:space-around;
}

.container .content .cards .card i{
  font-size:3rem;
  color:#11406a;
}

</style>
</head>
<body>
{{>adminNav}}



<section class="container" >
<div class="content"> 
<div class="cards">
                <div class="card">
                    <div class="box">
                        <h1 id="users" >0</h1>
                        <h3>Users</h3>
                    </div>
                    <div class="icon-case">
                        <i class='bx bxs-user'></i>
                    </div>
                </div>
                <div class="card">
                    <div class="box">
                        <h1 id="booking" >0</h1>
                        <h3>Booking</h3>
                    </div>
                    <div class="icon-case">
                        <i class="fas fa-calendar-week"></i>
                    </div>
                </div>
                <div class="card">
                    <div class="box">
                        <h1 id="collected" >0</h1>
                        <h3>Collected</h3>
                    </div>
                    <div class="icon-case">
                        <i class='bx bx-collection' ></i>
                    </div>
                </div>
                <div class="card">
                    <div class="box">
                        <h1 id="completed" >0</h1>
                        <h3>Completed</h3>
                    </div>
                    <div class="icon-case">
                        <i class='bx bx-check-square'></i>
                    </div>
                </div>
                <div class="card">
                     <div class="box">
                          <h1 id="services" >0</h1>
                          <h3>Services</h3>
                     </div>
                     <div class="icon-case">
                          <i class="fas fa-link"></i>
                     </div>
                </div>
                <div class="card">
                    <div class="box">
                       <h1 id="staff" >0</h1>
                       <h3>Staff</h3>
                    </div>
                    <div class="icon-case">
                          <i class="fas fa-stream"></i>
                    </div>
                </div>
            </div>
            </div>
            </section>
            
            
            <!-- coustom js -->
            <script src="../assets/js/main.js"></script>
  
<script type="text/javascript">
let user = document.getElementById("users")
let booking = document.getElementById("booking")
let collected = document.getElementById("collected")
let completed = document.getElementById("completed")
let staff = document.getElementById("staff")
let services = document.getElementById("services")

let userUrl = "/users"
let bookUrl = "/booking"
let collectUrl = "/collected"
let completUrl = "/completed"
let staffUrl = "/admin"
let serviceUrl = "/services"


   fetch(userUrl)
   .then(res => res.json())
   .then(data => { 
      user.innerHTML = data.length
   })
   .catch((e)=>{
      console.log(e)
   })
   
   fetch(bookUrl)
   .then(res => res.json())
   .then(data => { 
      booking.innerHTML = data.length
   })
   .catch((e)=>{
      console.log(e)
   })
   
   fetch(collectUrl)
   .then(res => res.json())
   .then(data => { 
      collected.innerHTML = data.length
   })
   .catch((e)=>{
      console.log(e)
   })
   
   fetch(completUrl)
   .then(res => res.json())
   .then(data => { 
      completed.innerHTML = data.length
   })
   .catch((e)=>{
      console.log(e)
   })
   
   fetch(serviceUrl)
   .then(res => res.json())
   .then(data => { 
      services.innerHTML = data.length
   })
   .catch((e)=>{
      console.log(e)
   })
   
   fetch(staffUrl)
   .then(res => res.json())
   .then(data => { 
      staff.innerHTML = data.length
   })
   .catch((e)=>{
      console.log(e)
   })
</script>
</body>
</html>