                            <option value="Kharghar" >Kharghar</option>
                            <option value="Belapur CBD" >Belapur CBD</option>
                            <option value="Seawood Darave" >Seawood Darave</option>
                            <option value="Nerul" >Nerul</option>
                            <option value="Juinagar" >Juinagar</option>
                            <option value="Turbhe" >Turbhe</option>
                            <option value="Koparkhairne" >Koparkhairne</option>
                            <option value="Ghansoli" >Ghansoli</option>
                            <option value="Rabale" >Rabale</option>
                            <option value="Airoli" >Airoli</option>
                            <option value="Sanpada" >Sanpada</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="pincode" placeholder="Pincode" required name="pincode" >
                    </div>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="address"
                        placeholder="Apartment, studio, or floor" required name="address" >
                </div>
                <div class="mb-3">
                     <label for="file" class="form-control" style="display:flex; justify-content: space-between;"><span>Upload Prescription</span> <span><i  class="fas fa-image"></i></span> </label>
                     <input class="form-control upload" type="file" id="file" accept="image/*" name="image" >
                </div>
                
                <button type="submit"  class="btn" style="width:100%; background-color:#11406a; color:#fff;">Book</button>
            </form>
       </div>
